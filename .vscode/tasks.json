{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run All Tests",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "python",
                "-m",
                "pytest",
                "tests",
                "--no-cov",
                "-v"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$python"
        },
        {
            "label": "Run Tests with Coverage",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "python",
                "-m",
                "pytest",
                "tests",
                "-v"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$python"
        },
        {
            "label": "Run Unit Tests Only",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "python",
                "-m",
                "pytest",
                "tests/unit",
                "--no-cov",
                "-v"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$python"
        }
    ]
}
